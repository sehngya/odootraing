<odoo>
    <data>
        <record id="view_mypscloud_traing_subject_tree" model="ir.ui.view">
            <field name="name">mypscloud_traing_subject.tree</field>
            <field name="model">mypscloud.traing.lesson</field>
            <field name="arch" type="xml">
                <tree string="科目列表">
                    <field name="name"/>
                    <field name="person_id"/>
                    <field name="lesson_ids"/>
                    <field name="desc"/>
                </tree>
            </field>
        </record>
        <record id="action_traing_subject" model="ir.actions.act_window">
            <field name="name">科目</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">mypscloud.traing.lesson</field>
            <field name="view_type">form</field>
            <field name="view_id" ref="view_traing_subject_tree"/>
            <field name="view_mode">tree,form</field>
        </record>
    </data>
</odoo>